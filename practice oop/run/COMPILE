g++ ${src_path}EncapsulationClass.h ${src_path}EncapsulationClass.cpp ${src_path}Vegetable.cpp ${src_path}Vegetable.h ${src_path}Fruit.cpp ${src_path}Fruit.h ${src_path}Mango.h ${src_path}Mango.cpp ${src_path}AnimalClass.cpp ${src_path}DogClass.cpp ${src_path}DogClass.h ${src_path}CatClass.h ${src_path}CatClass.cpp ${src_path}AnimalClass.h ${src_path}FileManager.cpp ${src_path}FileManager.h ${src_path}ExceptionHandlingExamples.h ${src_path}ExceptionHandlingExamples.cpp ${src_path}main.cpp -o ../bin/oop.exe

